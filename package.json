{
  "name": "@gerhobbelt/markdown-it-prism",
  "version": "2.0.5-5",
  "description": "Highlights code blocks in markdown-it using Prism.",
  "keywords": [
    "markdown-it",
    "markdown-it-plugin",
    "highlight",
    "prism",
    "prismjs"
  ],
  "homepage": "https://github.com/jGleitz/markdown-it-prism",
  "license": "GPL-3.0",
  "author": {
    "name": "Joshua Gleitze",
    "url": "https://joshuagleitze.de"
  },
  "files": [
    "README.md",
    "LICENSE",
    "build/index.js",
    "index.js",
    "CHANGELOG.md"
  ],
  "main": "build/index.js",
  "module": "index.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jGleitz/markdown-it-prism.git"
  },
  "scripts": {
    "build": "babel *.js -d build",
    "lint": "eslint *.js",
    "fix": "eslint --fix *.js",
    "orig-prepare": "npm run build",
    "unittest": "mocha test.js",
    "test": "npm run lint && npm run unittest",
    "pub": "npm publish --access public"
  },
  "peerDependencies": {
    "@gerhobbelt/prismjs": "1.*"
  },
  "devDependencies": {
    "@babel/cli": "7.12.10",
    "@babel/core": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "@babel/register": "7.12.10",
    "@gerhobbelt/markdown-it": "12.0.4-51",
    "babel-plugin-add-module-exports": "1.0.4",
    "chai": "4.2.0",
    "chai-string": "1.5.0",
    "eslint": "7.16.0",
    "mocha": "8.2.1",
    "@gerhobbelt/prismjs": "1.20.1-2",
    "semantic-release": "17.3.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "mocha": {
    "require": "@babel/register"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "# [Changelog](http://keepachangelog.com/)\n\nThis project adheres to [Semantic Versioning](http://semver.org/)."
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ]
        }
      ]
    ]
  },
  "babel": {
    "plugins": [
      [
        "add-module-exports",
        {
          "addDefaultProperty": true
        }
      ]
    ],
    "ignore": [
      "node_modules/**/*.js"
    ],
    "compact": false,
    "retainLines": false,
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": [
              "> 2%"
            ],
            "node": "8.0"
          }
        }
      ]
    ]
  }
}
